<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <test verbose="2" preserve-order="true" name="BroadleafCommerce" parallel="methods">
        <classes>
            <class name="com.broadleafcommerce.script.RegisterPageTest">
                <methods>
                    <parameter name="browserName" value="chrome"></parameter>
                    <include name="broadleafLogoImageAndPageTitleTest"/>
                    <include name="verifyRegisterPageTest"/>
                </methods>
            </class>
            <class name="com.broadleafcommerce.script.LoginTest">
                <methods>
                    <parameter name="browserName" value="chrome"></parameter>
                    <include name="broadleafLogoImageAndPageTitleTest"/>
                    <include name="loginTest"/>
                </methods>
            </class>
            <class name="com.broadleafcommerce.script.HomePageTest">
                <methods>
                    <parameter name="browserName" value="firefox"></parameter>
                    <include name="verifyUserNameTest"/>
                    <include name="verifyHotSauceLinkTest"/>
                </methods>
            </class>
            <class name="com.broadleafcommerce.script.GiftCardTest">
                <methods>
                    <parameter name="browserName" value="chrome"></parameter>
                    <include name="verifyGiftCardPageLable"/>
                    <include name="selectGiftCardTest"/>
                </methods>
            </class>
            <class name="com.broadleafcommerce.script.MarchandisePageTest">
                <methods>
                    <parameter name="browserName" value="chrome"></parameter>
                    <include name="verifyMerchandisePageTextAndTitle"/>
                    <include name="verifyMerchandiseTest"/>
                </methods>
            </class>
            <class name="com.broadleafcommerce.script.ProductRemoveFromCartTest">
                <methods>
                    <parameter name="browserName" value="chrome"></parameter>
                    <include name="productRemoveFromCartTest"/>
                </methods>
            </class>
            <class name="com.broadleafcommerce.script.ShippingPageTest">
                <methods>
                    <parameter name="browserName" value="chrome"></parameter>
                    <include name="verifyShippingPageTest"/>
                </methods>
            </class>
            <class name="com.broadleafcommerce.script.HotSauceTest">
                <methods>
                    <parameter name="browserName" value="chrome"></parameter>
                    <include name="verifyHotSaucePageLableAndTitle"/>
                    <include name="hotSauceTest"/>
                </methods>
            </class>
            <class name="com.broadleafcommerce.script.HotSaucePageTest">
                <methods>
                    <parameter name="browserName" value="chrome"></parameter>
                    <include name="verifyHotSaucePageLableAndTitle"/>
                    <include name="selectHotSauceTest"/>
                </methods>
            </class>
            <class name="com.broadleafcommerce.script.ClearancePageTest">
                <methods>
                    <parameter name="browserName" value="firefox"></parameter>
                    <include name="verifyClearancePageTextAndTitle"/>
                    <include name="verifyClearancePageTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>